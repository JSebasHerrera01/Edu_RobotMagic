<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Main_principal">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main_principal">

        <ImageView
            android:id="@+id/image_Profile"
            android:layout_width="350dp"
            android:layout_height="231dp"
            android:layout_margin="30dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/icono_principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/user"
            android:layout_width="137dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="20dp"
            android:gravity="center|top"
            android:text="Usuario:"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_Profile" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PRUEBA1234"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="137dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom|center"
            android:gravity="center|top"
            android:text="Progreso General"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_percent_general"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/prog_colors"
            app:layout_constraintVertical_bias="0.865"/>

        <TextView
            android:id="@+id/txt_percent_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/prog_colors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/prog_colors" />


        <ProgressBar
            android:id="@+id/prog_colors"
            android:layout_width="221dp"
            android:layout_height="174dp"
            android:layout_gravity="center"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.353" />

        <Button
            android:id="@+id/exit"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:icon="@drawable/ic_action_exit"
            android:text="Cerrar Sesion"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prog_colors"
            app:layout_constraintVertical_bias="0.636" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>